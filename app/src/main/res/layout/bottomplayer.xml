<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <SeekBar
        android:id="@+id/bottom_seekbar"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_title"
        android:layout_toEndOf="@+id/bottom_head"
        android:layout_toRightOf="@+id/bottom_head"
        android:background="@color/item_normally"
       />

    <com.example.View.AutoMoveTextView
        android:id="@+id/bottom_title"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bottom_head"
        android:layout_toRightOf="@+id/bottom_head"
        android:background="@color/item_normally"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/drak_gray"
        android:textSize="16dp"
        tools:text="fulldata" />

    <com.example.View.AutoMoveTextView
        android:id="@+id/bottomsinger"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_title"
        android:layout_toEndOf="@+id/bottom_head"
        android:layout_toRightOf="@+id/bottom_head"
        android:background="@color/item_normally"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/drak_gray"
        android:textSize="12sp"
        tools:text="fulldata" />

    <ImageButton
        android:id="@+id/bottom_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_weight="1"
        android:background="@drawable/click"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/nextbule"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/STOP"
        android:layout_toStartOf="@+id/STOP" />

    <ImageButton
        android:id="@+id/STOP"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bottom_next"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/stopblue" />

    <ImageView
        android:id="@+id/bottom_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/add" />

</RelativeLayout>