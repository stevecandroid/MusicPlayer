<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/local_layout"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/colorWhite"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="47dp"
                android:layout_marginRight="47dp"
                android:background="@color/clr_normal"
                android:padding="16dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/a_z" />

            <ImageButton
                android:id="@+id/local_mode_bt"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp"
                android:background="@color/clr_normal"
                android:padding="12dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/orderplay" />

        </RelativeLayout>


        <ListView
            android:id="@+id/local_music_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/local_mode_bt"
            android:layout_weight="0.93"
            android:background="@color/colorAccent"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_shadow_start_color"
            android:elevation="1dp" />


    </LinearLayout>

</LinearLayout>