<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <Button
                android:id="@+id/local_list__button_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/itemclick"
                android:foreground="?android:attr/selectableItemBackground" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:elevation="0dp">

            <TextView
                android:id="@+id/local_list_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/local_list_singer_head"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/local_list_singer_head"
                android:layout_width="74dp"
                android:layout_height="match_parent"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/local_list_add"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/local_SingerName"
                android:layout_toRightOf="@+id/local_SingerName"
                android:background="@color/colorAccent"
                android:padding="2dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/add" />

            <ImageButton
                android:id="@+id/local_list_del"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/colorAccent"
                android:baselineAlignBottom="false"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/delete"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/local_list_add"
                android:layout_toEndOf="@+id/local_list_add"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/local_SingerName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/local_list_title"
                android:layout_alignStart="@+id/local_list_title"
                android:layout_alignTop="@+id/local_list_add"
                android:maxLines="1"
                android:text="TextView" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>