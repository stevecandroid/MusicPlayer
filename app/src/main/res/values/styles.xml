<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colortoolbarBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:statusBarColor">@color/color_top</item>-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    
    
    <style name="AppThemeNight" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimaryDark</item>

    </style>
    
    
    <style name="popup">
        <item name="android:windowEnterAnimation">@anim/popup</item>
        <item name="android:windowExitAnimation">@anim/popupquit</item>
    </style>

</resources>
